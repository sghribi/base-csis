{% extends 'CSISEamBundle::layout.html.twig' %}

{% block csis_body %}

<div class="row">
  <div class="span12">
    
    <h3>Liste des propriétaires</h3>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      {% for owner in institution.owners %}
        <tr>
          <td>{{ owner.lastname }} {{ owner.firstname }}</td>
          <td>{{ owner.email }}</td>
          <td>
            <a href="{{ path('institution_credentials_remove', {'id': institution.id, 'owner' : owner.id}) }}" 
               data-toggle="tooltip" title="Enlever les droits à l'utilisateur">
              <i class="icon-remove"></i>
            </a>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="3">Il n'y a aucun propriétaire pour cet établissement !</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
    
    <div class="pull-right">
      <a href="{{ path('institution_show', {'id': institution.id}) }}" class="btn">
        <i class="icon-chevron-left"></i> Retour à l'établissement
      </a>
      <a href="{{ path('institution_credentials_edit', {'id': institution.id}) }}" class="btn btn-primary">
        <i class="icon-user icon-white"></i> Éditer les propriétaires
      </a>
    </div>
    
  </div>
    
</div>

{% endblock %}