{% extends 'CSISEamBundle::layout.html.twig' %}

{% block csis_body %}
    <div class="row">
        <div class="span12">
            {% include 'CSISEamBundle:Eam:flash.html.twig' %}
            {% include 'CSISEamBundle:Eam:mainflash.html.twig' %}
        </div>
    </div>

    <div class="row">
        <form action="{{ path('laboratory_update', { 'id': laboratory.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            <div class="span12">
                <div class="span8">
                    <div class="well">
                        <fieldset>
                            <legend>
                              Modification d'un Laboratoire
                                <div class="pull-right">
                                    {# Definition des bouttons #}
                                    <span class="span1">
                                        <a href="{{ path('laboratory') }}" class="btn btn-info btn-block" data-toggle="tooltip" title="Retour Ã  la liste des Laboratoires">
                                            <i class="icon-list-alt icon-white"></i>
                                            Liste
                                        </a>
                                    </span> 
                                    <span class="span2">
                                        <a href="{{ path('laboratory_ask_delete', { 'id': laboratory.id }) }}" class="btn btn-danger btn-block" data-toggle="tooltip" title="Supprimer le laboratoire">
                                            <i class="icon-trash icon-white"></i>
                                            Supprimer
                                        </a>
                                    </span>
                                </div>
                            </legend>
                            {{ form_widget(edit_form) }}
                            <div class="pull-right">
                                {# Definition des bouttons #}
                                <span class="span2">
                                    <button type="submit" class="btn btn-success btn-block" data-toggle="tooltip" title="Appliquer les modifications">
                                        <i class="icon-share-alt icon-white"></i>
                                        Appliquer
                                    </button>
                                </span>
                            </div>      
                        </fieldset>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}