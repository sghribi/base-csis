{% extends 'CSISEamBundle::layout.html.twig' %}

{% block csis_body %}

<div class="row">
  <div class="span12">
    {% include 'CSISEamBundle:Eam:flash.html.twig' %}
    {% include 'CSISEamBundle:Eam:mainflash.html.twig' %}
  </div>
</div>

<div class="row">
  <div class="span12">
    
    <div class="well">
      <div class="pull-left">
        <h4>Fiche du laboratoire : {{ laboratory.acronym }}</h4>
      </div>
      <div class="pull-right">
        <a href="{{ path('laboratory') }}" class="btn btn-info span1" data-toggle="tooltip" title="Retour à la liste des laboratoires">
          <i class="icon-list-alt icon-white"></i> Liste
        </a>
      </div>
      <br/>
      <p class="clearfix"></p>
      
      <div class="tabbable"> 
        <ul class="nav nav-tabs">
          <li class="active"><a href="#infos" data-toggle="tab">Informations</a></li>
          <li><a href="#equipments" data-toggle="tab">Equipements associés</a></li>
        </ul>

        <div class="tab-content">
          <div class="tab-pane active" id="infos">
            {# Insertion de la carte de profil #}
            {% include 'CSISEamBundle:Laboratory:profilCard.html.twig' %}
          </div>
          <div class="tab-pane" id="equipments">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Designation</th>
                  <th style="text-align:center;">Bâtiment</th>
                  <th style="text-align:center;">Etage</th>
                  <th style="text-align:center;">Salle</th>
                  <th style="text-align:center;">Disponible</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
              {% for entity in laboratory.equipments %}
                <tr>
                  <td>{{ entity.designation }}</td>
                  <td style="text-align:center;">{{ entity.building }}</td>
                  <td style="text-align:center;">{{ entity.floor }}</td>
                  <td style="text-align:center;">{{ entity.room }}</td>
                  <td style="text-align:center;">{% if entity.shared=='0' %}Oui{% else %}Non{% endif %}</td>
                  <td><a href="{{ path('equipment_show', { 'id': entity.id }) }}" class="icon-eye-open" title="Afficher" ></a></td>
                </tr>
               {% else %}
                  <tr>
                    <td colspan="6">
                      <strong>Il n'y a aucun équipement à afficher pour ce laboratoire !</strong><br />
                    </td>
                  </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
      
      {% if is_granted("ROLE_GEST_LAB") %}
      <div class="pull-right">
        <div class="btn-group">
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            Actions&nbsp;<span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li>
              <a href="{{ path('laboratory_edit', { 'id': laboratory.id }) }}">
                <i class="icon-edit"></i> Modifier
              </a>
            </li>
            <li>
              <a href="{{ path('laboratory_ask_delete', { 'id': laboratory.id }) }}">
                <i class="icon-trash"></i> Supprimer
              </a>
            </li>
            <li>
              <a href="{{ path('laboratory_credentials', { 'id': laboratory.id }) }}">
                <i class="icon-user"></i> Gestion des droits d'accès
              </a>
            </li>
            {# Désactivé car non fonctionnel
                <li>
                  <a class="disabled" href="{{ path('laboratory_fusion', { 'id': laboratory.id }) }}">
                    <i class="icon-resize-small"></i> Fusionner (/!\)
                  </a>
                </li>
                <li>
                  <a class="disabled" href="">
                    <i class="icon-resize-full"></i> Séparer  (/!\)
                  </a>
                </li>
             #}
          </ul>
        </div>
      </div>
      <br />
      {% endif %}
      
    </div>
    
  </div>
</div>

{% endblock %}