{% if onglet is not defined %}{% set onglet = 'edit' %}{%  endif %}

<div class="span8">
    <div class="well"> 
      <ul class="nav nav-tabs"> 
        <li{% if onglet != 'edit' %} class="active"{% endif %}><a href="#list" data-toggle="tab">Liste des tags</a></li>
        {% if is_granted("ROLE_GEST_TAGS") %}
          <li{% if onglet == 'edit' %} class="active"{% endif %}><a href="#edit" data-toggle="tab">En attente</a></li>
        {% endif %} 
      </ul>
        
      {# Flash message #}
      {% include 'CSISEamBundle:Eam:mainflash.html.twig' %}
      
      <div class="tab-content">
              
        {# Liste des tags #}
        <div class="tab-pane{% if onglet != 'edit' %} active{% endif %}" id="list">
          <table class="table table-striped table-hover csis-datatable">
            <thead>
              <tr>
                <th>Tag</th>
                <th>Statut</th>
                <th style="text-align:center;">Nombre d'utilisation</th>
                {% if is_granted("ROLE_GEST_TAGS") %} <th></th><th></th> {% endif %}
              </tr>
            </thead>
            <tbody>
            {# Affiche tous les tags par ordre alphabétique #}
            {% for tag in tags_all %}
              <tr>
                <td>{{ tag.tag.tag }}</td> {# Nom du tag #}
                <td>
                    {% if tag.tag.status is constant('CSIS\\EamBundle\\Entity\\Tag::PENDING')%}
                        En attente
                    {% elseif tag.tag.status is constant('CSIS\\EamBundle\\Entity\\Tag::ACCEPTED')%}
                        Validé
                    {% elseif tag.tag.status is constant('CSIS\\EamBundle\\Entity\\Tag::REFUSED')%}
                        Refusé
                    {% endif %}
                </td>
                <td style="text-align:center;">
                    {{ tag.nb }}
                </td>
                {% if is_granted("ROLE_GEST_TAGS") %} 
                    <td><a href="{{ path('tag_edit', { 'id': tag.tag.id }) }}" class="icon-edit" title="Modifier" ></a></td> {# Modifier #}
                    <td><a href="{{ path('tag_ask_delete', { 'id': tag.tag.id }) }}" class="icon-remove" title="Supprimer" ></a></td> {# Supprimer #}
                {% endif %} 
              </tr>
              {% else %}
              <tr>
                <td>
                  <strong>Il n'y a aucun tag à afficher.</strong><br />
                  <a href="{{ path('tag') }}">Retour</a>
                </td>
                <td>&nbsp;</td><td>&nbsp;</td>
                {% if is_granted("ROLE_GEST_TAGS") %}<td>&nbsp;</td><td>&nbsp;</td>{% endif %}
              </tr>
              {% endfor %}
            </tbody>
          </table>  
        </div>
        {# Fin liste des tags #}

        {# Liste des tags en attente #}
        {% if is_granted("ROLE_GEST_TAGS") %}
        <div class="tab-pane{% if onglet == 'edit' %} active{% endif %}" id="edit">
          <table class="table table-striped table-hover csis-datatable">
            <thead>
              <tr>
                <th>Tag</th>
                <th>Statut</th>
                <th style="text-align:center;">Nombre d'utilisation</th>
                <th></th><th></th>
              </tr>
            </thead>
            <tbody>
              {# Affiche tous les tags par ordre alphabétique en attente #}
              {% for tag in tags_att %}
                  {% if tag.tag.status is constant('CSIS\\EamBundle\\Entity\\Tag::PENDING')%}
                    <tr>
                      <td>{{ tag.tag.tag }}</td> {# Nom du tag #}
                      <td>En attente</td> {# Statut du tag #}
                      <td style="text-align:center;">{{ tag.nb }}</td> {# Nombre d'utilisation #}
                      <td><a href="{{ path('tag_edit', { id: tag.tag.id }) }}" class="icon-edit" title="Modifier" ></a></td> {# Modifier #}
                      <td><a href="{{ path('tag_ask_delete', { id: tag.tag.id }) }}" class="icon-remove" title="Supprimer" ></a></td> {# Supprimer #}
                    </tr>
                {% endif %}
              {% else %}
                <tr>
                  <td>
                    <strong>Il n'y aucun tag en attente</strong><br />
                  </td>
                  <td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td><td>&nbsp;</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
        {% endif %}
        {# Fin liste des tags en attente #}
      </div>
  </div>
        
</div>
