{% extends 'CSISEamBundle::layout.html.twig' %}

{% block csis_body %}

    <div class="row">
        <div class="span12">
            {% include 'CSISEamBundle:Eam:flash.html.twig' %}
        </div>
    </div>


    <div class="row">
        <div class="offset1 span10">
            <form action="{{ path('equipment_update', {'id' : equipment.id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">

            {% include "CSISEamBundle:Equipment:form_content.html.twig" with
              {
                'title': 'Modification d\'un équipement',
                'icon_type'  : 'icon-refresh icon-white',
                'button_name': 'Mettre à jour l\'équipement',
                'button_back_name': 'Retour'
