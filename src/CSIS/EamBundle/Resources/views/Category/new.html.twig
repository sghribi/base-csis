{% extends 'CSISEamBundle::layout.html.twig' %}

{% block csis_body %}
    <div class="row">
        <div class="span12">
            {% include 'CSISEamBundle:Eam:flash.html.twig' %}
            {% include 'CSISEamBundle:Eam:mainflash.html.twig' %}
        </div>
    </div>

    <div class="row">

        {% include 'CSISEamBundle:Eam:flash.html.twig' %}
        <form action="{{ path('category_create') }}" method="post" {{ form_enctype(form) }}>
            <div class="span12">
                <div class="span8">
                    <div class="well">
                        <fieldset>
                            <legend>
                              Céation d'une Famille
                              <div class="pull-right">
                                  {# Definition des bouttons #}
                                  <span class="span2">
                                      <a href="{{ path('category') }}" class="btn btn-info btn-block" data-toggle="tooltip" title="Retour à la liste des Familles">
                                          <i class="icon-list-alt icon-white"></i>
                                          Liste
                                      </a>
                                  </span> 
                              </div>
                            </legend>
                            {{ form_widget(form) }}
                            <div class="pull-right">
                                {# Definition des bouttons #}
                                <span class="span2">
                                    <button type="submit" class="btn btn-success btn-block">
                                        <i class="icon-share-alt icon-white"></i>
                                        Créer
                                    </button>
                                </span>
                            </div>      
                        </fieldset>
                    </div>
                </div>
            </div>
    
            <div class="row">
                <div class="span6">
                    {{ form_rest(form) }}  
                </div>
            </div>
        </form>
    </div>
{% endblock %}