{% set laboratory = equipment.laboratory %}
{% set institution = laboratory.institution %}

<ul class="nav nav-tabs">
    <li class="active"><a href="#informations" data-toggle="tab">Informations</a></li>
    <li><a href="#proprietaire" data-toggle="tab">Hébergeur</a></li>
    {% if is_granted('ROLE_USER') %}
        <li>
          <a href="#owners" data-toggle="tab">Propriétaires</a>
        </li>
    {% else %}
        <li class="disabled" data-toggle="tooltip" title="Vous devez être authentifié">
          <a href="#">Propriétaires</a>
        </li>
    {% endif %}

</ul>
<div class="tab-content">
    <div class="tab-pane active" id="informations">
        {% include 'CSISEamBundle:Equipment:profilCard.html.twig' %}
    </div>

    <div class="tab-pane" id="proprietaire">
        {% include 'CSISEamBundle:Institution:profilCard.html.twig' %}
        <hr/>
        {% include 'CSISEamBundle:Laboratory:profilCard.html.twig' %}
    </div>

    <div class="tab-pane" id="owners">
      {% if is_granted('ROLE_USER') %}
        <dl>
          <dt>Propriétaires</dt>
          <dd>
            {% if equipment.owners is not empty %}
            <ul>
                {% for owner in equipment.owners %}
                    <li>{{ owner.firstName }} {{ owner.lastName }} &lt;<a href="mailto:{{ owner.email }}">{{ owner.email }}</a>&gt;</li>
                {% endfor %}
            </ul>
            {% else %}
                <span class="muted">Aucun propriétaire</span>
            {% endif %}
          </dd>
        </dl>
      {% endif %}
    </div>
</div>
