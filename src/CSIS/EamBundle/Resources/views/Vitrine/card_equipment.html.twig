    <div class="tab-pane" id="owners">
        <dl>
          <dt>Contacts</dt>
          <dd>
            {% if equipment.owners is not empty %}
            <ul>
                {% for owner in equipment.owners %}
                    <li>{{ owner.firstName }} {{ owner.lastName }} &lt;<a href="mailto:{{ owner.email }}">{{ owner.email }}</a>&gt;</li>
                {% endfor %}
            </ul>
            {% else %}
                <span class="muted">Aucun contact</span>
            {% endif %}
          </dd>
        </dl>
    </div>
