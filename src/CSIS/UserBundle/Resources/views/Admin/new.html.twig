{% extends 'HydrodynUserBundle::layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="span12">
  <div class="white-panel">
    
    <h1>{{ 'new.title'|trans({}, 'user_admin')}}</h1>
    
    <form action="{{ path('hydrodyn_user_admin_new') }}" {{ form_enctype(form) }} method="POST">
      {{ form_widget(form) }}
      <p class="muted">
        {{ 'user.rolesHelp'|trans({}, 'user_admin')|nl2br }}
      </p>
      <div>
        <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-success"/>
      </div>
    </form>
    
  </div>
</div>
{% endblock fos_user_content %}
